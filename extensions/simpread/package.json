{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "simpread",
  "title": "SimpRead",
  "description": "Search and Open SimpRead Unreader",
  "icon": "logo@512.png",
  "author": "kenshin",
  "owner": "messor",
  "license": "MIT",
  "commands": [
    {
      "name": "sr",
      "title": "Browse Posts",
      "subtitle": "SimpRead",
      "description": "Browse SimpRead Posts",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "path",
      "title": "SimpRead Config Path",
      "description": "Your simpread_config.json path",
      "type": "textfield",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.39.3"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^18.0.21",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
